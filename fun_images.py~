
import image
import random

def draw_horizontal_line(img, y, color):
    """Draw a horizontal line across img in the given color at height y
    """
	for x in range(img.width()):
		img.set(x, y, color)

def draw_vertical_line(img, x, color):
	for y in range(img.height()):
		img.set(x, y, color)    


def draw_rectangle(img, corner_x, corner_y, width, height, color):

def draw_circle(img, center_x, center_y, radius, color):


def random_lines(img):
    """Fill image with horizontal lines of random colors
    """
   	for y in range(img.height()):
	     color = (random.randrange(255),
             random.randrange(255),
             random.randrange(255))
    draw_horizontal_line(img, y, color)

